@using DKXISG.Models
@model IEnumerable<DoktorZiyaret>
@{
    ViewBag.Title = "Ziyaretlerim";
    Layout = "~/Views/Shared/_DoktorLayout.cshtml";
}
@section header{
    <style>
        .label{
            font-size:11px !important;
        }
    </style>
}
<h1 class="page-title">
    <a class="btn btn-circle btn-default" href="/Doktor/ZiyaretOlustur">
        <i class="icon-plus"></i> Ziyaret Oluştur
    </a>
    Ziyaretler
    <small>Sadece size ait ziyaretleri görüntülüyorsunuz</small>
</h1>
<div class="row">
   
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-comments"></i> Ziyaretleriniz
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="Küçült" data-title="Küçült"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th> Firma </th>
                                <th> Sektör </th>
                                <th> Tarih </th>
                                <th> İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <label class="label label-primary">
                                            <span class="fa fa-briefcase"></span> 
                                            @item.Firma.Adi
                                        </label>
                                    </td>
                                    <td>
                                        <span class="fa fa-ticket"></span>
                                        @item.Firma.Sektor.Adi
                                    </td>
                                    <td>
                                        <span class="fa fa-calendar"></span> 
                                        @item.Tarih.Value.ToShortDateString()
                                    </td>
                                    <td>

                                        <a class="btn btn-xs btn-success" href="/Doktor/ZiyaretIslemleri/@item.Id">
                                            <span class="icon-note"></span> İşlemler
                                        </a>

                                    </td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    
</div>