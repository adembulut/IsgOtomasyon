@model DKXISG.Models.Sektor
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Sektör Düzenle</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <form action="#" id="frmSektorDuzenle">
                <input hidden id="Id" name="Id" value="@Model.Id" />
                <div class="form-group">
                    <input class="form-control" required maxlength="50" id="Adi" name="Adi" value="@Model.Adi" />
                </div>

            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn default" data-dismiss="modal">Kapat</button>
    <button type="button" class="btn blue" id="btnSektorGuncelle">Güncelle</button>
</div>

    <script>
        $('#btnSektorGuncelle').click(function () {
            $.ajax({
                type: 'POST',
                url: '/Yonetim/__SektorDuzenle',
                data: $('#frmSektorDuzenle').serialize(),
                dataType:'script'
            });
        });
    </script>
