@model DKXISG.Models.Musteri

@{
    ViewBag.Title = "MusteriEkle1";
}




<div class="portlet box blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>Müşteri Ekle
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>
            <a href="javascript:;" class="reload"></a>
        </div>
    </div>

    <div class="portlet-body form">

        <form method="post" action="#" id="musteriekleform">
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <!--<h4>Musteri</h4>-->
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-body">

                    <div class="form-group">
                        @Html.LabelFor(model => model.KullaniciAdi, new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.KullaniciAdi, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.KullaniciAdi)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Parola, new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Parola, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Parola)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AdiSoyadi, new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.AdiSoyadi, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AdiSoyadi)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Unvani, new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Unvani, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Unvani)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Telefon, new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Telefon)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Mail, new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Mail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Mail)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Adres, new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.Adres, new { @class = "form-control", @rows = "3" })
                            @Html.ValidationMessageFor(model => model.Adres)
                        </div>
                    </div>





                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button class="btn btn-primary" type="reset">Temizle</button> |
                            <button class="btn btn-default" id="musterieklekaydet" type="button">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div>
            @Html.ActionLink("Müşteri Listesine Dön", "Musteriler", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>



@section footer{
    <script>
        $('#musterieklekaydet').click(function () {
            $.ajax({
                url: '/Yonetim/MusteriEkle',
                type: 'POST',
                data: $('#musteriekleform').serialize(),
                dataType: 'script'
            });
        });
    </script>
}