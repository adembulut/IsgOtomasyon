@using DKXISG.Models
@model Yonetici
@{
    ViewBag.Title = "YoneticiDetay";
}

@section header{
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="~/Content/assets/pages/css/profile.min.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL STYLES -->
}



<h1 class="page-title">
    Kullanıcı Profili | @Model.AdiSoyadi
    <small>Üye Detay Sayfası</small>
</h1>
<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PROFILE SIDEBAR -->
        <div class="profile-sidebar">
            <!-- PORTLET MAIN -->
            <div class="portlet light profile-sidebar-portlet ">
                <!-- SIDEBAR USERPIC -->
                @*<div class="profile-userpic">
                        <img src="../assets/pages/media/profile/profile_user.jpg" class="img-responsive" alt="">
                    </div>*@
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">@Model.AdiSoyadi </div>
                    @if (Model.AktifMi == true)
                    {
                        <div class="profile-usertitle-job"> Aktif</div>

                    }
                    else
                    {
                        <div class="profile-usertitle-job"> Pasif </div>

                    }
                </div>
                <!-- END SIDEBAR USER TITLE -->
                <!-- SIDEBAR BUTTONS -->
                <div class="profile-userbuttons">
                    @if ((Session["yonetici"] as Yonetici).Id != Model.Id)
                    {
                        <a class="btn btn-circle red btn-sm" href="#">Mesaj Gönder</a>
                    }
                    else
                    {
                        <a class="btn btn-circle red btn-sm" href="/Yonetim/Mesajlarim">Mesajlarım</a>

                    }
                    <br />
                    <br />
                </div>
                <!-- END SIDEBAR BUTTONS -->

            </div>
            <!-- END PORTLET MAIN -->
            <!-- PORTLET MAIN -->
            <div class="portlet light ">
                <!-- STAT -->
                <div class="row list-separated profile-stat">
                    <div class="col-md-4 col-sm-4 col-xs-6">
                        <div class="uppercase profile-stat-title"> 37 </div>
                        <div class="uppercase profile-stat-text"> Proje </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-6">
                        <div class="uppercase profile-stat-title"> 51 </div>
                        <div class="uppercase profile-stat-text"> Görev </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-6">
                        <div class="uppercase profile-stat-title"> 61 </div>
                        <div class="uppercase profile-stat-text"> ###### </div>
                    </div>
                </div>
                <!-- END STAT -->

            </div>
            <!-- END PORTLET MAIN -->
        </div>
        <!-- END BEGIN PROFILE SIDEBAR -->
        <!-- BEGIN PROFILE CONTENT -->
        <div class="profile-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light ">
                        <div class="portlet-title tabbable-line">
                            <div class="caption caption-md">
                                <i class="icon-globe theme-font hide"></i>
                                <span class="caption-subject font-blue-madison bold uppercase">Yönetici Hesabı</span>
                            </div>
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#tab_1_1" data-toggle="tab">Kişi Bilgileri</a>
                                </li>
                                <li>
                                    <a href="#tab_1_3" data-toggle="tab">Şifre Değiştir</a>
                                </li>
                                <li>
                                    <a href="#tab_1_4" data-toggle="tab">Durum Ayarları</a>
                                </li>
                            </ul>
                        </div>
                        <div class="portlet-body">
                            <div class="tab-content">
                                <!-- PERSONAL INFO TAB -->
                                <div class="tab-pane active" id="tab_1_1">
                                    <form role="form" action="#" method="post" id="detayprofilform">
                                        <input hidden id="Id" name="Id" value="@Model.Id" />
                                        <div class="form-group">
                                            <label class="control-label">*Adı Soyadı</label>
                                            <input type="text" class="form-control" name="AdiSoyadi" maxlength="51" required value="@Model.AdiSoyadi" />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">*Kullanıcı Adı</label>
                                            <input type="text" class="form-control" required maxlength="51" name="KullaniciAdi" value="@Model.KullaniciAdi" />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Telefon Numarası</label>
                                            <input type="text" class="form-control" name="Telefon" value="@Model.Telefon" />
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label">Mail Adresi</label>
                                            <input type="text" class="form-control" name="Mail" value="@Model.Mail" />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Adres</label>
                                            <textarea class="form-control" rows="3" name="Adres">@Model.Adres </textarea>
                                        </div>
                                        <div class="margin-top-10">
                                            <button class="btn green " id="detayyonetkaydet" type="submit"> Kaydet </button>
                                        </div>
                                    </form>
                                </div>
                                <!-- END PERSONAL INFO TAB -->
                                <!-- CHANGE PASSWORD TAB -->
                                <div class="tab-pane" id="tab_1_3">
                                    <form action="#" id="sifreform">
                                        <input hidden id="Id" name="Id" value="@Model.Id" />
                                        <div class="form-group">
                                            <label class="control-label">Eski Parola</label>
                                            <input type="password" class="form-control" name="EskiParola" required />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Yeni Parola</label>
                                            <input type="password" class="form-control" name="YeniParola" required />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Parola Onay</label>
                                            <input type="password" class="form-control" name="YeniParolaOnay" required />
                                        </div>
                                        <div class="margin-top-10">
                                            <button class="btn green" type="button" id="sifredegistir"> Şifre Değiştir </button>
                                            <button class="btn default" type="reset"> İptal </button>
                                        </div>
                                    </form>
                                </div>
                                <!-- END CHANGE PASSWORD TAB -->
                                <!-- PRIVACY SETTINGS TAB -->
                                <div class="tab-pane" id="tab_1_4">
                                    <form action="#">
                                        <table class="table table-light table-hover">
                                            <tr>
                                                <td> *Pasif Olan Kullanıcı Hiç bir yetkiye sahip olamaz</td>
                                                <td>
                                                    @if (Model.AktifMi == true)
                                                    {
                                                    <a class="btn red  pasifyap" href="#" data-yoneticiid="@Model.Id">
                                                        Pasifleştir
                                                    </a>
                                                    }
                                                    else
                                                    {
                                                    <a class="btn green aktifyap" href="#" data-yoneticiid="@Model.Id">
                                                        Aktifleştir
                                                    </a>
                                                    }
                                                </td>
                                            </tr>
                                        </table>
                                    </form>
                                </div>
                                <!-- END PRIVACY SETTINGS TAB -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PROFILE CONTENT -->
    </div>
</div>


@section footer{
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/Content/assets/pages/scripts/profile.min.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->

    <script type="text/javascript">

        $('#sifredegistir').click(function () {
            $.ajax({
                type: 'POST',
                url: '/Yonetim/SifreDegistir',
                data: $('#sifreform').serialize(),
                dataType: 'script'
            });
        });


        $('#detayyonetkaydet').click(function () {
            $.ajax({
                url: '/Yonetim/DetayProfilKaydet',
                type: 'POST',
                data: $('#detayprofilform').serialize(),
                dataType:'script'
            });
        });









        $('.pasifyap').click(function () {
            var yoneticiid = this.dataset.yoneticiid;
            if (yoneticiid > 0) {
                $.ajax({
                    type: 'POST',
                    url: '/Yonetim/pasifyap',
                    data: { yoneticiid: yoneticiid },
                    datatype: 'script'

                });
            }
        });
        $('.aktifyap').click(function () {
            var yoneticiid = this.dataset.yoneticiid;
            if (yoneticiid > 0) {
                $.ajax({
                    type: 'POST',
                    url: '/Yonetim/aktifyap',
                    data: { yoneticiid: yoneticiid },
                    dataType: 'script'
                });
            }
        });
    </script>
}