@using DKXISG.Models
@model Musteri
@{
    ViewBag.Title = "MusteriDetay";
}

@section header{
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="~/Content/assets/pages/css/profile.min.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL STYLES -->
}



<h1 class="page-title">
    Kullanıcı Profili | @Model.AdiSoyadi
    <small>Üye Detay Sayfası</small>
</h1>
<div class="row">
    <div class="col-md-12">
        <div class="profile-sidebar">
            <div class="portlet light profile-sidebar-portlet ">
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">@Model.AdiSoyadi </div>
                    @if (Model.AktifMi == true)
                    {
                        <div class="profile-usertitle-job"> Aktif</div>

                    }
                    else
                    {
                        <div class="profile-usertitle-job"> Pasif </div>

                    }
                </div>
                <div class="profile-userbuttons">

                    <a class="btn btn-circle red btn-sm" href="#">Mesaj Gönder</a>

                    <br />
                    <br />
                </div>
            </div>
            <div class="portlet light ">
                <div class="row list-separated profile-stat">
                    <div class="col-md-4 col-sm-4 col-xs-6">
                        <div class="uppercase profile-stat-title"> 37 </div>
                        <div class="uppercase profile-stat-text"> Proje </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-6">
                        <div class="uppercase profile-stat-title"> 51 </div>
                        <div class="uppercase profile-stat-text"> Görev </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-6">
                        <div class="uppercase profile-stat-title"> 61 </div>
                        <div class="uppercase profile-stat-text"> ###### </div>
                    </div>
                </div>
                <!-- END STAT -->

            </div>
            <!-- END PORTLET MAIN -->
        </div>
        <!-- END BEGIN PROFILE SIDEBAR -->
        <!-- BEGIN PROFILE CONTENT -->
        <div class="profile-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light ">
                        <div class="portlet-title tabbable-line">
                            <div class="caption caption-md">
                                <i class="icon-globe theme-font hide"></i>
                                <span class="caption-subject font-blue-madison bold uppercase">Müşteri Hesabı</span>
                            </div>
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#tab_1_1" data-toggle="tab">Kişi Bilgileri</a>
                                </li>
                                <li>
                                    <a href="#tab_1_3" data-toggle="tab">Şifre Değiştir</a>
                                </li>
                                <li>
                                    <a href="#tab_1_4" data-toggle="tab">Durum Ayarları</a>
                                </li>
                            </ul>
                        </div>
                        <div class="portlet-body">
                            <div class="tab-content">
                                <!-- PERSONAL INFO TAB -->
                                <div class="tab-pane active" id="tab_1_1">
                                    <form role="form" action="#" method="post" id="detaymusteriprofil">
                                        <input hidden id="Id" name="Id" value="@Model.Id" />
                                        <div class="form-group">
                                            <label class="control-label">*Adı Soyadı</label>
                                            <input type="text" class="form-control" name="AdiSoyadi" maxlength="51" required value="@Model.AdiSoyadi" />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Kullanıcı Adı</label>
                                            <input type="text" class="form-control" maxlength="51" disabled readonly value="@Model.KullaniciAdi" />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Telefon Numarası</label>
                                            <input type="number" class="form-control" name="Telefon" value="@Model.Telefon" />
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label">Mail Adresi</label>
                                            <input type="text" class="form-control" name="Mail" value="@Model.Mail" />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Adres</label>
                                            <textarea class="form-control" rows="3" name="Adres">@Model.Adres </textarea>
                                        </div>

                                        <div class="margin-top-10">
                                            <button class="btn green" id="detaymusterikaydet" type="button"> Güncelle </button>
                                        </div>
                                    </form>
                                </div>
                                <!-- END PERSONAL INFO TAB -->
                                <!-- CHANGE PASSWORD TAB -->
                                <div class="tab-pane" id="tab_1_3">
                                    <form action="#" id="doktorsifreform">
                                        <input hidden id="Id" name="Id" value="@Model.Id" />

                                        <div class="form-group">
                                            <label class="control-label">Yeni Parola</label>
                                            <input type="password" class="form-control" name="YeniParola" required />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Parola Onay</label>
                                            <input type="password" class="form-control " name="YeniParolaOnay" required />
                                        </div>
                                        <div class="margin-top-10">
                                            <button class="btn green" type="button" id="doktorsifredegistir"> Şifre Değiştir </button>
                                            <button class="btn default" type="reset"> İptal </button>
                                        </div>
                                    </form>
                                </div>
                                <div class="tab-pane" id="tab_1_4">
                                    <form action="#">
                                        <table class="table table-light table-hover">
                                            <tr>
                                                <td> *Pasif Olan Kullanıcı Hiç bir yetkiye sahip olamaz</td>
                                                <td>
                                                    @if (Model.AktifMi == true)
                                                    {
                                                        <a class="btn red  pasifyapmusteri" href="#" data-musteriid="@Model.Id">
                                                            Pasifleştir
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn green aktifyapmusteri" href="#" data-musteriid="@Model.Id">
                                                            Aktifleştir
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        </table>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section footer{
    <script src="~/Content/assets/pages/scripts/profile.min.js" type="text/javascript"></script>
    <script type="text/javascript">

        $('#detaymusterikaydet').click(function () {
            $.ajax({
                url: '/Yonetim/DetayMusteriProfilKaydet',
                type: 'POST',
                data: $('#detaymusteriprofil').serialize(),
                dataType: 'script'
            });
        });




        $('#doktorsifredegistir').click(function () {
            $.ajax({
                type: 'POST',
                url: '/Yonetim/DoktorSifreDegistir',
                data: $('#doktorsifreform').serialize(),
                dataType: 'script'
            });
        });
       
    </script>

<script type="text/javascript">
    $('.pasifyapmusteri').click(function () {
        var musteriid = this.dataset.musteriid;
        if (musteriid > 0) {
            $.ajax({
                type: 'POST',
                url: '/Yonetim/pasifyapmusteri',
                data: { musteriid: musteriid },
                dataType: 'script'
            });
        }
    });
    $('.aktifyapmusteri').click(function () {
        var musteriid = this.dataset.musteriid;
        if (musteriid > 0) {
            $.ajax({
                type: 'POST',
                url: '/Yonetim/aktifyapmusteri',
                data: { musteriid: musteriid },
                dataType: 'script'
            });
        }
    });
</script>

}

